<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="org.d3kad3nt.sunriseClock.ui.light.lightDetail.LightDetailViewModel"/>
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayoutCompat"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_light_status"
            android:text="@{viewModel.light.status.toString()}" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_light_name"
            android:text="@{viewModel.light.data.friendlyName}" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_on_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="On"
            android:onCheckedChanged="@{(switch, checked) -> viewModel.setLightOnState(checked)}"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
