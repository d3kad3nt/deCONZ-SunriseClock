<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="pref_time_category"
        app:title="Zeitraum">

        <EditTextPreference
            app:key="pref_earliest_time"
            app:summary="@string/alarm_early_summary"
            app:title="@string/alarm_early" />
        <EditTextPreference
            app:key="pref_latest_time"
            app:summary="@string/alarm_late_summary"
            app:title="@string/alarm_late" />
    </PreferenceCategory>

</androidx.preference.PreferenceScreen>