<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_home">
    <fragment
        android:id="@+id/nav_group_control"
        android:name="org.d3kad3nt.sunriseClock.ui.groupControl.GroupControlFragment"
        android:label="{groupName}"
        tools:layout="@layout/group_control_fragment">
        <argument
            android:name="groupId"
            app:argType="long" />
        <argument
            android:name="groupName"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/nav_home"
        android:name="org.d3kad3nt.sunriseClock.ui.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/home_fragment">
        <action
            android:id="@+id/action_lights_to_lightDetail"
            app:destination="@id/nav_nested_light_control" />
        <action
            android:id="@+id/action_lights_to_groupDetail"
            app:destination="@id/nav_group_control" />
    </fragment>
    <fragment
        android:id="@+id/nav_endpoints_overview"
        android:name="org.d3kad3nt.sunriseClock.ui.endpointsOverview.EndpointsOverviewFragment"
        android:label="@string/endpoint_list"
        tools:layout="@layout/endpoints_overview_fragment">
        <action
            android:id="@+id/action_endpoints_to_endpointDetail"
            app:destination="@id/nav_nested_endpoint_management" />
        <action
            android:id="@+id/action_endpoints_to_endpointAddFragment"
            app:destination="@id/nav_endpoint_add" />
    </fragment>
    <fragment
        android:id="@+id/nav_endpoint_add"
        android:name="org.d3kad3nt.sunriseClock.ui.endpointsOverview.EndpointAddFragment"
        android:label="Add Endpoint"
        tools:layout="@layout/endpoint_add_fragment" />
    <!--
    Create nested nav graph to be able to scope a single viewmodel to all fragments in this graph.
    These fragments are tightly coupled.
    -->
    <navigation
        android:id="@+id/nav_nested_light_control"
        app:startDestination="@id/nav_light_control">
        <argument
            android:name="lightId"
            app:argType="long" />
        <argument
            android:name="lightName"
            app:argType="string" />
        <fragment
            android:id="@+id/nav_light_control"
            android:name="org.d3kad3nt.sunriseClock.ui.lightControl.LightControlFragment"
            android:label="{lightName}"
            tools:layout="@layout/light_control_fragment">
            <argument
                android:name="lightId"
                app:argType="long" />
            <argument
                android:name="lightName"
                app:argType="string" />
            <action
                android:id="@+id/action_lightDetail_to_lightDetailInfoDialogFragment"
                app:destination="@id/nav_light_control_info_dialog" />
            <action
                android:id="@+id/action_lightDetail_to_lightDetailNameEditDialogFragment"
                app:destination="@id/nav_light_control_name_edit_dialog" />
        </fragment>
        <dialog
            android:id="@+id/nav_light_control_info_dialog"
            android:name="org.d3kad3nt.sunriseClock.ui.lightControl.LightControlInfoDialogFragment"
            android:label="LightDetailInfoDialogFragment" />
        <dialog
            android:id="@+id/nav_light_control_name_edit_dialog"
            android:name="org.d3kad3nt.sunriseClock.ui.lightControl.LightControlNameEditDialogFragment"
            android:label="LightDetailNameEditDialogFragment" />
    </navigation>
    <!--
    Create nested nav graph to be able to scope a single viewmodel to all fragments in this graph.
    These fragments are tightly coupled.
    -->
    <navigation
        android:id="@+id/nav_nested_endpoint_management"
        app:startDestination="@id/nav_endpoint_management">
        <fragment
            android:id="@+id/nav_endpoint_management"
            android:name="org.d3kad3nt.sunriseClock.ui.endpointManagement.EndpointManagementFragment"
            android:label="{endpointName}"
            tools:layout="@layout/endpoint_management_fragment">
            <argument
                android:name="endpointID"
                app:argType="long" />
            <argument
                android:name="endpointName"
                app:argType="string" />
            <action
                android:id="@+id/action_endpointDetail_to_endpointDetailInfoDialogFragment"
                app:destination="@id/nav_endpoint_management_info_dialog" />
            <action
                android:id="@+id/action_endpointDetail_to_endpointDetailNameEditDialogFragment"
                app:destination="@id/nav_endpoint_management_name_edit_dialog" />
            <action
                android:id="@+id/action_endpointDetail_to_endpointDetailDeleteDialogFragment"
                app:destination="@id/nav_endpoint_detail_delete_dialog" />
        </fragment>
        <dialog
            android:id="@+id/nav_endpoint_management_info_dialog"
            android:name="org.d3kad3nt.sunriseClock.ui.endpointManagement.EndpointManagementInfoDialogFragment"
            android:label="EndpointDetailInfoDialogFragment" />
        <dialog
            android:id="@+id/nav_endpoint_management_name_edit_dialog"
            android:name="org.d3kad3nt.sunriseClock.ui.endpointManagement.EndpointManagementNameEditDialogFragment"
            android:label="EndpointDetailNameEditDialogFragment" />
        <dialog
            android:id="@+id/nav_endpoint_detail_delete_dialog"
            android:name="org.d3kad3nt.sunriseClock.ui.endpointManagement.EndpointManagementDeleteDialogFragment"
            android:label="EndpointDetailDeleteDialogFragment" />
        <argument
            android:name="endpointId"
            app:argType="long" />
        <argument
            android:name="endpointName"
            app:argType="string" />
    </navigation>
    <fragment
        android:id="@+id/nav_entities_overview"
        android:name="org.d3kad3nt.sunriseClock.ui.entitiesOverview.EntitiesOverviewFragment"
        android:label="@string/bottomnav_entities_title"
        tools:layout="@layout/entities_overview_fragment">
        <action
            android:id="@+id/action_bottomnav_entities_to_nav_graph_light_detail"
            app:destination="@id/nav_nested_light_control" />
        <action
            android:id="@+id/action_bottomnav_entities_to_group_detail"
            app:destination="@id/nav_group_control" />
    </fragment>
</navigation>
